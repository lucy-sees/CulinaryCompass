<h1 class="mb-4">Edit Ingredient</h1>

<%= form_with(model: [@recipe, @ingredient], local: true) do |form| %>
  <div class="form-group mb-3">
    <%= form.text_field :name, placeholder: "Name", class: "form-control" %>
  </div>

  <div class="form-group mb-3">
    <%= form.text_field :quantity, placeholder: "Quantity", class: "form-control" %>
  </div>

  <div class="form-group mb-3">
    <%= form.text_field :value, placeholder: "Value", class: "form-control" %>
  </div>

  <div class="actions mb-3">
    <%= form.submit "Update Ingredient", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to 'Back', recipe_path(@recipe), class: "btn btn-secondary" %>
