<h1 class="mb-4"><%= @ingredient.name %></h1>

<div class="mb-3">
  <strong>Quantity:</strong>
  <p class="ml-2"><%= @ingredient.quantity %></p>
</div>

<div class="mb-3">
  <strong>Value:</strong>
  <p class="ml-2"><%= @ingredient.value %></p>
</div>

<%= link_to 'Edit', edit_recipe_ingredient_path(@recipe, @ingredient), class: "btn btn-primary mr-2" %>
<%= link_to 'Back', recipe_path(@recipe), class: "btn btn-secondary" %>
