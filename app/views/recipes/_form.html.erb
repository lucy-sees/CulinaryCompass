<%= form_with(model: recipe, html: { class: 'form' }) do |form| %>
  <% if recipe.errors.any? %>
    <div id="error_explanation" class="alert alert-danger" data-turbo-cache="false">
      <h4>
        <%= pluralize(recipe.errors.count, "error") %> prohibited this recipe from being saved:
      </h4>
      <ul>
        <% recipe.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :preparation_time %>
    <%= form.number_field :preparation_time, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :cooking_time %>
    <%= form.number_field :cooking_time, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :public %>
    <%= form.check_box :public, class: 'form-check-input' %>
  </div>

  <div class="form-group">
    <%= form.label :user_id %>
    <%= form.text_field :user_id, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
