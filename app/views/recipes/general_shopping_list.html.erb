<% if @shopping_list.empty? %>
  <p class="alert alert-warning">You have no items in your shopping list.</p>
<% else %>
  <table class="table table-striped table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Item</th>
        <th>Quantity</th>
        <th>Value</th>
      </tr>
    </thead>
    <tbody>
      <% total_value = 0 %>
      <% @shopping_list.each do |item| %>
        <tr>
          <td><%= item.name %></td>
          <td><%= item.quantity %></td>
          <td><%= item.value %></td>
        </tr>
        <% total_value += item.value %>
      <% end %>
      <tr class="table-info">
        <td colspan="2"><strong>Total</strong></td>
        <td><%= total_value %></td>
      </tr>
    </tbody>
  </table>
<% end %>
