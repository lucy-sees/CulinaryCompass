<%= form_with(model: food, html: { class: 'form' }) do |form| %>
  <% if food.errors.any? %>
    <div id="error_explanation" class="alert alert-danger" data-turbo-cache="false">
      <h4>
        <%= pluralize(food.errors.count, "error") %> prohibited this food from being saved:
      </h4>
      <ul>
        <% food.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.text_field :name, class: 'form-control', placeholder: 'Name' %>
  </div>

  <div class="form-group">
    <%= form.text_field :measurement_unit, class: 'form-control', placeholder: 'Measurement Unit' %>
  </div>

  <div class="form-group">
    <%= form.number_field :price, class: 'form-control', placeholder: 'Price' %>
  </div>

  <div class="form-group">
    <%= form.number_field :quantity, class: 'form-control', placeholder: 'Quantity' %>
  </div>

  <div class="form-group mt-3">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
